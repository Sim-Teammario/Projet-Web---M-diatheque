{% extends 'base.html.twig' %}

{% block content %}
    <section class="auth-section">
        <h1>Connexion</h1>
        
        {% if error %}
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> {{ error }}
            </div>
        {% endif %}
        
        <div class="auth-form-container">
            <form class="auth-form" method="post" action="{{ baseUrl }}?route=auth/login" novalidate>
                <input type="hidden" name="route" value="auth/login">
                <div class="form-group">
                    <label for="username">Nom d'utilisateur</label>
                    <input type="text" id="username" name="username" required>
                </div>
                
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="password" required>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Se connecter</button>
                </div>
            </form>
        </div>
        
        <div class="auth-links">
            <p>Vous n'avez pas de compte ? <a href="{{ baseUrl }}?route=auth/register">S'inscrire</a></p>
        </div>
    </section>
{% endblock %}

{% block scripts %}
    <script src="{{ baseUrl }}assets/js/validation.js"></script>
{% endblock %}
